@model List<BugTracker.Models.Project>

@{
    ViewData["Title"] = "Home Page";
}

<div class="projects-container">
    <section class="container" style="width: 100%;">
        <header id="your-projects-card" class="card">
            <h1>Your Projects</h1>
            <a class="btn" id="create-project" asp-action="Create">Create project</a>
        </header>
        <div class="projects-grid">
            @{
                foreach (var obj in Model)
                {
                    <card class="card project-card">
                        <div class="project-info">
                            <h2>@obj.Title</h2>
                            <h4>@obj.Type</h4>
                        </div>
                        <h5 style="text-align: right;">@obj.CreatedAt.ToShortDateString()</h5>
                    </card>
                }
            }
        </div>
    </section>
</div>
