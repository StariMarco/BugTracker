@page
@model RegisterModel
@{ ViewData["Title"] = "Register"; }

<section class="auth-container">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <card class="auth-card">
            <h1 style="margin-bottom: 40px;">Register</h1>
            <div class="form-group">
                <input asp-for="Input.FullName" class="text-input" placeholder="Full name" />
                <span asp-validation-for="Input.FullName" class="text-error"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Email" class="text-input" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-error"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="text-input" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-error"></span>
            </div>
            @*<div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="text-input" placeholder="Confirm password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-error"></span>
                </div>*@
            <div class="form-group">
                <button type="submit" class="auth-button">Register</button>
            </div>
            <hr />
            <div class="form-group">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="text-align: center;">Already have an account? Log in</a>
                <a asp-page="" asp-route-returnUrl="" style="text-align: center; margin-top: 12px;">Log in with guest account</a>
            </div>
        </card>
    </form>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
