@page
@model ExternalLoginModel
@{ ViewData["Title"] = "Register"; }

<section class="auth-container">
    <div class="auth-card">
        <form class="auth-form" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Register</h1>
            <div style="margin: 20px 0 10px 0;">
                <h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
                <p id="external-login-description" class="text-info">
                    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                    Please enter your name and an email address for this site below and click the Register button to finish
                    logging in.
                </p>
            </div>
            <div class="form-group">
                <input asp-for="Input.FullName" class="text-input" placeholder="Full name" />
                <span asp-validation-for="Input.FullName" class="text-error"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Email" class="text-input" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-error"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="auth-button">Register</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
