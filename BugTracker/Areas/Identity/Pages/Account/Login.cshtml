@page
@model LoginModel

@{ ViewData["Title"] = "Log in"; }

<section class="auth-container">
    <card class="auth-card">
        <form id="account" class="auth-form" method="post">
            @{ string marginBottom = "30px";
                if (!ModelState.IsValid) marginBottom = "20px";

    <h1 style="margin-bottom: @marginBottom;">Login</h1> }
            @if (!ModelState.IsValid)
            {
<span class="text-error" style="align-self: start; margin-bottom: 5px;">Invalid email or password</span>}
            <div class="form-group">
                <input asp-for="Input.Email" class="text-input" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-error"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="text-input" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-error"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="auth-button">Log in</button>
            </div>
        </form>
        <h5 style="font-weight: 400; text-align: center; margin-bottom: 15px;">OR</h5>
        @{ if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form">
    <div class="form-group">
        @foreach (var provider in Model.ExternalLogins)
        {
<button type="submit" class="external-login-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
    Continue with @provider.DisplayName
</button>}
    </div>
</form> } }
        <hr />
        <div class="form-group">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-align: center;">Donâ€™t have an account? Register</a>
            <a asp-page="" asp-route-returnUrl="" style="text-align: center; margin-top: 12px;">Log in with guest account</a>
        </div>
    </card>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
